# Flask App Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# MySQL Configuration for Railway
MYSQLHOST=containers-us-west-XX.railway.app  # Replace with your Railway MySQL host
MYSQLUSER=root                              # Usually 'root' for Railway MySQL
MYSQLPASSWORD=your_mysql_password           # Get this from Railway dashboard
MYSQLPORT=12345                             # Get this from Railway dashboard
MYSQLDATABASE=railway                       # Default database name in Railway

# Local Development (uncomment and use these for local development)
# MYSQLHOST=localhost
# MYSQLUSER=root
# MYSQLPASSWORD=
# MYSQLPORT=3306
# MYSQLDATABASE=housing_db

# File Uploads
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB max file size

# Email Configuration (if needed)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# CBIR Configuration
FEATURES_DIR=static/features

# File Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB max upload size

# Other Settings
DEBUG=True
