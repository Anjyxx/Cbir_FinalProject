{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python@3.0.0",
      "config": {
        "pythonVersion": "3.12",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/app.py"
    }
  ],
  "buildCommand": "node vercel-build.js",
  "installCommand": "python3.12 -m ensurepip --default-pip && python3.12 -m pip install --upgrade pip && python3.12 -m pip install -r requirements.txt --no-cache-dir"
}
  