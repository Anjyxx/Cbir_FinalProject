{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.9",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(?<path>.*)",
      "dest": "/static/$path"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
  "installCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
  "outputDirectory": "api"
}
